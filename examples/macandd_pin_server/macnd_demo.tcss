Screen {
    overflow: auto;
    background: #87CEEB;  /* Sky blue background */
}

/* Tab bar styling */
TabbedContent > ContentTabs {
    background: #32CD32;  /* Lime green background like save button */
    color: #FFFFFF;  /* White text */
    width: 100%;
    margin: 0;
}

TabbedContent > ContentTabs > Tab {
    background: #32CD32;  /* Lime green background */
    color: #FFFFFF;  /* White text */
    border: solid #228B22;  /* Green border */
}

TabbedContent > ContentTabs > Tab:hover {
    background: #90EE90;  /* Light green on hover */
}

TabbedContent > ContentTabs > Tab.-active {
    background: #228B22;  /* Darker green for active tab */
    color: #FFFFFF;  /* White text */
}

TabbedContent {
    width: 100%;
    margin: 0;
}

TabPane {
    padding: 0;
    height: 100%;
    min-height: 100vh;
}

#pin-tab {
    height: 100%;
    min-height: 100vh;
    padding: 2;
    background: #F0E68C;  /* Sand color background like config */
}

#config-tab {
    height: 100%;
}

#macnd-demo {
    layout: grid;
    grid-size: 3;
    grid-gutter: 1 2;
    grid-columns: 1fr;
    grid-rows: 2fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr;
    margin: 1 2;
    min-height: 25;
    min-width: 20;
    height: 100%;
    background: #F0E68C;  /* Khaki/sand color */
    border: thick #228B22;  /* Forest green border */

    &:inline {
        margin: 0 2;
    }
}

Button {
    width: 100%;
    height: 100%;
    background: #20B2AA;  /* Light sea green */
    color: white;
    border: solid #008B8B;  /* Dark cyan border */
}

Button:hover {
    background: #48D1CC;  /* Medium turquoise on hover */
}

Button.number {
    background: #00CED1;  /* Dark turquoise for numbers */
    color: white;
}

Button.number:hover {
    background: #40E0D0;  /* Turquoise on hover */
}

#numbers {
    column-span: 3;
    padding: 0 1;
    height: 100%;
    background: #FFFACD;  /* Lemon chiffon */
    color: #2F4F4F;  /* Dark slate gray text */
    content-align: center middle;
    text-align: right;
    border: solid #FF6347;  /* Tomato border */
}

#enter {
    column-span: 3;
    background: #32CD32;  /* Lime green for Enter */
    color: white;
}

#enter:hover {
    background: #90EE90;  /* Light green on hover */
}

#reset {
    background: #FF8C00;  /* Dark orange for Reset */
    color: white;
}

#reset:hover {
    background: #FFA500;  /* Orange on hover */
}

#clear {
    background: #FF6347;  /* Tomato for Clear */
    color: white;
}

#clear:hover {
    background: #FF7F50;  /* Coral on hover */
}

#backspace {
    background: #FFD700;  /* Gold for Backspace */
    color: #2F4F4F;
}

#backspace:hover {
    background: #FFFF00;  /* Yellow on hover */
}

#pin-label {
    text-align: center;
    padding: 1;
    content-align: center middle;
    background: #98FB98;  /* Pale green background */
    color: #2F4F4F;  /* Dark slate gray text */
    border: solid #228B22;  /* Forest green border */
}

#attempts-bar {
    margin: 1 0;
    height: 3;
    width: 100%;
}

/* Base progress bar styling */
#attempts-bar > .bar--bar {
    background: #32CD32;  /* Default lime green */
}

#attempts-bar > .bar--complete {
    background: #2F4F4F;  /* Dark background for completed portion */
}

/* Color classes for different attempt levels */
#attempts-bar.high-attempts > .bar--bar {
    background: #32CD32;  /* Lime green for 3 attempts */
}

#attempts-bar.medium-attempts > .bar--bar {
    background: #FFD700;  /* Gold for 2 attempts */
}

#attempts-bar.low-attempts > .bar--bar {
    background: #FF6347;  /* Tomato red for 1 attempt */
}

#attempts-bar.no-attempts > .bar--bar {
    background: #8B0000;  /* Dark red for 0 attempts */
}

/* Configuration tab styling */
#config-container {
    padding: 2;
    background: #F0E68C;  /* Sand color background */
    border: solid #228B22;  /* Forest green border */
    margin: 1;
}

#config-title {
    text-align: center;
    padding: 1;
    background: #98FB98;  /* Pale green */
    color: #2F4F4F;
    border: solid #228B22;
    margin-bottom: 1;
}

#pin-config-label, #attempts-config-label {
    color: #2F4F4F;
    padding: 1 0;
    text-style: bold;
}

#pin-input, #attempts-input {
    margin-bottom: 1;
    background: #FFFACD;  /* Lemon chiffon */
    border: solid #20B2AA;  /* Light sea green border */
}

#save-config {
    margin: 1 0;
    background: #32CD32;  /* Lime green */
    color: white;
    height: 3;
}

#save-config:hover {
    background: #90EE90;  /* Light green on hover */
}

#new-session {
    margin: 1 0;
    background: #FF8C00;  /* Dark orange for new session */
    color: white;
    height: 3;
}

#new-session:hover {
    background: #FFA500;  /* Orange on hover */
}

#config-status {
    text-align: center;
    padding: 1;
    color: #2F4F4F;
    text-style: bold;
} 